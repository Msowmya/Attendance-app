<h1>Sign up</h1>
<%= form_for(@employee) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
    </p>
    <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
    </p>
    <p>
    <%= f.submit "Create my account"%>
    </p>
<% end %>

